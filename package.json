{
  "name": "@connectum/monorepo",
  "version": "1.0.0-rc.2",
  "description": "Universal framework for gRPC/ConnectRPC microservices on Node.js 25+",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/Connectum-Framework/connectum.git"
  },
  "homepage": "https://github.com/Connectum-Framework/connectum#readme",
  "bugs": {
    "url": "https://github.com/Connectum-Framework/connectum/issues"
  },
  "scripts": {
    "build": "turbo run build",
    "typecheck": "tsc --noEmit",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:bun": "turbo run test:bun",
    "test:esbuild": "turbo run test:esbuild",
    "test:cross-runtime": "turbo run test test:bun test:esbuild",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "biome": "biome check --write .",
    "dev": "turbo run dev --parallel",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "generate:keys": "mkdir -p keys && openssl req -nodes -x509 -newkey rsa:2048 -days 3650 -subj \"/CN=localhost\" -keyout keys/server.key -out keys/server.crt -addext \"subjectAltName=DNS:localhost,IP:127.0.0.1\"",
    "prepare": "husky"
  },
  "keywords": [
    "grpc",
    "connectrpc",
    "microservices",
    "connectum",
    "node.js",
    "typescript",
    "native-typescript"
  ],
  "author": "Highload.Zone",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.23.0",
  "engines": {
    "node": ">=25.2.0",
    "pnpm": ">=10"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@bufbuild/protoc-gen-es": "catalog:",
    "@types/node": "catalog:",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "c8": "^10.1.3",
    "husky": "catalog:",
    "@exodus/test": "^1.0.0-rc.116",
    "turbo": "^2.8.9",
    "typescript": "catalog:"
  }
}
