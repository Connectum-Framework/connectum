{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Type checking for packages (no emit)
    "noEmit": true
  },
  "include": ["packages/*/src/**/*.ts", "packages/*/tests/**/*.ts"],
  "exclude": ["node_modules", "**/node_modules", "**/gen", "**/dist"]
}
