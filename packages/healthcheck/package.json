{
  "name": "@connectum/healthcheck",
  "version": "1.0.0-beta.2",
  "description": "Healthcheck protocol for Connectum: gRPC Health Check + HTTP endpoints",
  "type": "module",
  "main": "./src/index.ts",
  "imports": {
    "#gen/*": "./gen/*",
    "#*": "./src/*"
  },
  "exports": {
    ".": "./src/index.ts"
  },
  "files": [
    "src",
    "gen",
    "proto"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Connectum-Framework/connectum.git",
    "directory": "packages/healthcheck"
  },
  "scripts": {
    "dev": "node --watch src/index.ts",
    "buf:generate": "buf generate",
    "buf:lint": "buf lint",
    "build:proto": "pnpm run buf:generate && pnpm run build:proto:compile",
    "build:proto:compile": "tsc --project tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "test": "node --test tests/**/*.test.ts",
    "test:unit": "node --test tests/unit/**/*.test.ts",
    "test:integration": "node --test tests/integration/**/*.test.ts",
    "lint": "biome check src",
    "format": "biome check --write src",
    "clean": "rm -rf coverage gen gen-ts"
  },
  "keywords": [
    "healthcheck",
    "health-check",
    "grpc",
    "connectrpc",
    "connectum"
  ],
  "author": "Highload.Zone",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=25.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@bufbuild/protobuf": "catalog:",
    "@connectrpc/connect": "catalog:"
  },
  "peerDependencies": {
    "@connectum/core": "workspace:^"
  },
  "peerDependenciesMeta": {
    "@connectum/core": {
      "optional": false
    }
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@bufbuild/buf": "catalog:",
    "@bufbuild/protoc-gen-es": "catalog:",
    "@connectum/core": "workspace:^",
    "c8": "catalog:",
    "typescript": "catalog:"
  }
}
