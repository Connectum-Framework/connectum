{
  "name": "@connectum/otel",
  "version": "1.0.0-rc.3",
  "description": "OpenTelemetry instrumentation for Connectum",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./interceptor": {
      "types": "./dist/interceptor.d.ts",
      "default": "./dist/interceptor.js"
    },
    "./client-interceptor": {
      "types": "./dist/client-interceptor.d.ts",
      "default": "./dist/client-interceptor.js"
    },
    "./shared": {
      "types": "./dist/shared.d.ts",
      "default": "./dist/shared.js"
    },
    "./tracer": {
      "types": "./dist/tracer.d.ts",
      "default": "./dist/tracer.js"
    },
    "./meter": {
      "types": "./dist/meter.d.ts",
      "default": "./dist/meter.js"
    },
    "./logger": {
      "types": "./dist/logger.d.ts",
      "default": "./dist/logger.js"
    },
    "./traced": {
      "types": "./dist/traced.d.ts",
      "default": "./dist/traced.js"
    },
    "./traceAll": {
      "types": "./dist/traceAll.d.ts",
      "default": "./dist/traceAll.js"
    },
    "./attributes": {
      "types": "./dist/attributes.d.ts",
      "default": "./dist/attributes.js"
    },
    "./metrics": {
      "types": "./dist/metrics.d.ts",
      "default": "./dist/metrics.js"
    },
    "./provider": {
      "types": "./dist/provider.d.ts",
      "default": "./dist/provider.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Connectum-Framework/connectum.git",
    "directory": "packages/otel"
  },
  "scripts": {
    "dev": "node --watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "node --test tests/**/*.test.ts",
    "test:unit": "node --test tests/unit/**/*.test.ts",
    "test:bun": "echo 'SKIP: OpenTelemetry SDK is Node-specific'",
    "test:esbuild": "exodus-test --esbuild tests/**/*.test.ts",
    "lint": "biome check src",
    "format": "biome check --write src",
    "build": "tsup",
    "clean": "rm -rf coverage dist"
  },
  "keywords": [
    "opentelemetry",
    "tracing",
    "metrics",
    "logging",
    "connectum",
    "observability"
  ],
  "author": "Highload.Zone",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@connectrpc/connect": "catalog:",
    "@opentelemetry/api": "catalog:",
    "@opentelemetry/api-logs": "catalog:",
    "@opentelemetry/exporter-trace-otlp-http": "catalog:",
    "@opentelemetry/exporter-trace-otlp-grpc": "catalog:",
    "@opentelemetry/exporter-metrics-otlp-http": "catalog:",
    "@opentelemetry/exporter-metrics-otlp-grpc": "catalog:",
    "@opentelemetry/exporter-logs-otlp-http": "catalog:",
    "@opentelemetry/exporter-logs-otlp-grpc": "catalog:",
    "@opentelemetry/resources": "catalog:",
    "@opentelemetry/sdk-logs": "catalog:",
    "@opentelemetry/sdk-metrics": "catalog:",
    "@opentelemetry/sdk-trace-node": "catalog:",
    "@opentelemetry/semantic-conventions": "catalog:",
    "env-var": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "c8": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:"
  }
}
