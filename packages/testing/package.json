{
  "name": "@connectum/testing",
  "version": "1.0.0-rc.5",
  "description": "Testing utilities for Connectum",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Connectum-Framework/connectum.git",
    "directory": "packages/testing"
  },
  "scripts": {
    "dev": "node --watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "node --test tests/**/*.test.ts",
    "test:unit": "node --test tests/unit/**/*.test.ts",
    "test:bun": "exodus-test --engine bun:pure tests/**/*.test.ts",
    "test:esbuild": "exodus-test --esbuild tests/**/*.test.ts",
    "lint": "biome check src",
    "format": "biome check --write src",
    "build": "tsup",
    "clean": "rm -rf coverage dist"
  },
  "keywords": [
    "testing",
    "connectum",
    "test-utilities",
    "mocks"
  ],
  "author": "Highload.Zone",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@connectum/core": "workspace:^",
    "@connectrpc/connect": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@exodus/test": "^1.0.0-rc.116",
    "c8": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:"
  }
}
