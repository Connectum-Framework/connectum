{
  "name": "@connectum/interceptors",
  "version": "1.0.0-rc.4",
  "description": "ConnectRPC interceptors for Connectum",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./errorHandler": {
      "types": "./dist/errorHandler.d.ts",
      "default": "./dist/errorHandler.js"
    },
    "./serializer": {
      "types": "./dist/serializer.d.ts",
      "default": "./dist/serializer.js"
    },
    "./logger": {
      "types": "./dist/logger.d.ts",
      "default": "./dist/logger.js"
    },
    "./retry": {
      "types": "./dist/retry.d.ts",
      "default": "./dist/retry.js"
    },
    "./circuit-breaker": {
      "types": "./dist/circuit-breaker.d.ts",
      "default": "./dist/circuit-breaker.js"
    },
    "./timeout": {
      "types": "./dist/timeout.d.ts",
      "default": "./dist/timeout.js"
    },
    "./bulkhead": {
      "types": "./dist/bulkhead.d.ts",
      "default": "./dist/bulkhead.js"
    },
    "./fallback": {
      "types": "./dist/fallback.d.ts",
      "default": "./dist/fallback.js"
    },
    "./defaults": {
      "types": "./dist/defaults.d.ts",
      "default": "./dist/defaults.js"
    },
    "./method-filter": {
      "types": "./dist/method-filter.d.ts",
      "default": "./dist/method-filter.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Connectum-Framework/connectum.git",
    "directory": "packages/interceptors"
  },
  "scripts": {
    "dev": "node --watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "node --test tests/unit/**/*.test.ts tests/integration/**/*.test.ts",
    "test:unit": "node --test tests/unit/**/*.test.ts",
    "test:integration": "node --test tests/integration/**/*.test.ts",
    "test:bun": "echo 'SKIP: mock.method() not polyfilled in bun:pure'",
    "test:esbuild": "exodus-test --esbuild tests/unit/**/*.test.ts tests/integration/**/*.test.ts",
    "lint": "biome check src",
    "format": "biome check --write src",
    "build": "tsup",
    "clean": "rm -rf coverage dist"
  },
  "keywords": [
    "interceptors",
    "connectrpc",
    "grpc",
    "connectum",
    "middleware"
  ],
  "author": "Highload.Zone",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@connectrpc/connect": "catalog:",
    "@connectrpc/validate": "catalog:",
    "@bufbuild/protobuf": "catalog:",
    "@connectum/core": "workspace:^",
    "cockatiel": "^3.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "c8": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:"
  }
}
