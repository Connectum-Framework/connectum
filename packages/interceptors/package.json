{
  "name": "@connectum/interceptors",
  "version": "1.0.0-rc.3",
  "description": "ConnectRPC interceptors for Connectum",
  "type": "module",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./errorHandler": "./src/errorHandler.ts",
    "./serializer": "./src/serializer.ts",
    "./logger": "./src/logger.ts",
    "./retry": "./src/retry.ts",
    "./circuit-breaker": "./src/circuit-breaker.ts",
    "./timeout": "./src/timeout.ts",
    "./bulkhead": "./src/bulkhead.ts",
    "./fallback": "./src/fallback.ts",
    "./defaults": "./src/defaults.ts",
    "./method-filter": "./src/method-filter.ts"
  },
  "files": [
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Connectum-Framework/connectum.git",
    "directory": "packages/interceptors"
  },
  "scripts": {
    "dev": "node --watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "node --test tests/unit/**/*.test.ts tests/integration/**/*.test.ts",
    "test:unit": "node --test tests/unit/**/*.test.ts",
    "test:integration": "node --test tests/integration/**/*.test.ts",
    "lint": "biome check src",
    "format": "biome check --write src",
    "clean": "rm -rf coverage"
  },
  "keywords": [
    "interceptors",
    "connectrpc",
    "grpc",
    "connectum",
    "middleware"
  ],
  "author": "Highload.Zone",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=25.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@connectrpc/connect": "catalog:",
    "@connectrpc/validate": "catalog:",
    "@bufbuild/protobuf": "catalog:",
    "@connectum/core": "workspace:^",
    "cockatiel": "^3.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "c8": "catalog:",
    "typescript": "catalog:"
  }
}
