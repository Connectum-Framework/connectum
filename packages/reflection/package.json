{
  "name": "@connectum/reflection",
  "version": "1.0.0-rc.2",
  "description": "gRPC Server Reflection protocol for Connectum (v1 + v1alpha)",
  "type": "module",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "files": [
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Connectum-Framework/connectum.git",
    "directory": "packages/reflection"
  },
  "scripts": {
    "dev": "node --watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "node --test tests/**/*.test.ts",
    "test:unit": "node --test tests/unit/**/*.test.ts",
    "test:integration": "node --test tests/integration/**/*.test.ts",
    "lint": "biome check src",
    "format": "biome check --write src",
    "clean": "rm -rf coverage"
  },
  "keywords": [
    "reflection",
    "grpc",
    "connectrpc",
    "connectum",
    "server-reflection"
  ],
  "author": "Highload.Zone",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=25.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@bufbuild/protobuf": "catalog:",
    "@connectrpc/connect": "catalog:",
    "@lambdalisue/connectrpc-grpcreflect": "^0.5.0"
  },
  "peerDependencies": {
    "@connectum/core": "workspace:^"
  },
  "peerDependenciesMeta": {
    "@connectum/core": {
      "optional": false
    }
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@connectrpc/connect-node": "catalog:",
    "@connectum/core": "workspace:^",
    "@connectum/healthcheck": "workspace:^",
    "c8": "catalog:",
    "typescript": "catalog:"
  }
}
