{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": ["tsconfig.json", "tsconfig.*.json"],
  "tasks": {
    "build:proto": {
      "inputs": ["proto/**/*.proto", "buf.yaml", "buf.gen.yaml", "tsconfig.build.json"],
      "outputs": ["gen/**", "gen-ts/**"],
      "cache": true
    },
    "build": {
      "dependsOn": ["^build", "build:proto"],
      "inputs": ["src/**/*.ts", "tsup.config.ts", "package.json"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "buf:lint": {
      "inputs": ["proto/**/*.proto", "buf.yaml"],
      "outputs": [],
      "cache": true
    },
    "buf:breaking": {
      "outputs": [],
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "test:unit": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "test:integration": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "format": {
      "outputs": [],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
